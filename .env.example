# =============================================================================
# IFTB - Intelligent Futures Trading Bot
# Environment Configuration Example
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
ENVIRONMENT=development
APP_VERSION=0.1.0
DEBUG=true

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=iftb
DB_USER=iftb
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# -----------------------------------------------------------------------------
# Binance Exchange
# -----------------------------------------------------------------------------
EXCHANGE_API_KEY=your_binance_api_key
EXCHANGE_API_SECRET=your_binance_api_secret
EXCHANGE_TESTNET=true

# -----------------------------------------------------------------------------
# Telegram
# -----------------------------------------------------------------------------
# Get from https://my.telegram.org/apps
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here

# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Chat ID for alerts (your personal chat or group)
TELEGRAM_ALERT_CHAT_ID=-1001234567890

# News channel IDs to monitor (comma-separated)
TELEGRAM_NEWS_CHANNEL_IDS=-1001111111111,-1002222222222

# -----------------------------------------------------------------------------
# LLM (Anthropic Claude)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=1000
LLM_CACHE_TTL_SECONDS=300

# -----------------------------------------------------------------------------
# Trading Configuration
# -----------------------------------------------------------------------------
TRADING_SYMBOLS=BTCUSDT,ETHUSDT
TRADING_TIMEFRAMES=1h,4h
TRADING_DEFAULT_LEVERAGE=5
TRADING_PAPER_MODE=true

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=pretty
LOG_FILE_PATH=logs/iftb.log

# -----------------------------------------------------------------------------
# Monitoring (optional)
# -----------------------------------------------------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
